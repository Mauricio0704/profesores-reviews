---
import { GraduationCap } from '@lucide/astro';

interface Props {
  title?: string;
  subtitle?: string;
}

const { 
  title = "Rate My Professor", 
  subtitle = "Encuentra a los mejores profesores en tu universidad" 
} = Astro.props;

const accessToken = Astro.cookies.get("sb-access-token");
const refreshToken = Astro.cookies.get("sb-refresh-token");
const isSignedIn = !!(accessToken && refreshToken);
---

<header class="bg-white/80 backdrop-blur-md border-b border-gray-200 sticky top-0 z-50 shadow-sm">
  <div class="w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16 sm:h-20">
      
      {/* Logo y Textos */}
      <a href="/" class="flex items-center gap-3 sm:gap-4 group hover:opacity-90 transition-all duration-200 min-w-0 transform group-hover:scale-105">
        <div class="bg-gradient-to-br from-blue-600 to-indigo-600 rounded-xl sm:rounded-2xl p-2 sm:p-2.5 shadow-md flex-shrink-0 transition-transform">
          <GraduationCap class="w-5 h-5 sm:w-7 sm:h-7 text-white" />
        </div>
        <div class="min-w-0">
          <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 leading-tight truncate group-hover:text-blue-600 transition-colors duration-200">
            {title}
          </h1>
          <p class="text-xs sm:text-sm text-gray-600 leading-snug truncate group-hover:text-gray-900 transition-colors duration-200">
            {subtitle}
          </p>
        </div>
      </a>

      {/* Login/Signin Button */}
      {isSignedIn ? (
        <form action="/api/auth/signout" class="m-0">
          <button type="submit" class="px-4 sm:px-6 py-2 sm:py-2.5 bg-red-600 hover:bg-red-700 text-white font-medium rounded-lg transition-colors text-sm sm:text-base">
            Cerrar Sesión
          </button>
        </form>
      ) : (
        <a href="/signin" class="px-4 sm:px-6 py-2 sm:py-2.5 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors text-sm sm:text-base">
          Iniciar Sesión
        </a>
      )}

    </div>
  </div>
</header>