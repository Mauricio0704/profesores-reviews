---
import { GraduationCap } from '@lucide/astro';

interface Props {
  title?: string;
  subtitle?: string;
}

const { 
  title = "Rate My Professor", 
  subtitle = "Encuentra a los mejores profesores en tu universidad" 
} = Astro.props;
---

<header class="bg-white/80 backdrop-blur-md border-b border-gray-200 sticky top-0 z-50 shadow-sm">
  <div class="w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16 sm:h-20">
      
      {/* Logo y Textos */}
      <a href="/" class="flex items-center gap-3 sm:gap-4 group hover:opacity-90 transition-opacity min-w-0">
        <div class="bg-gradient-to-br from-blue-600 to-indigo-600 rounded-xl sm:rounded-2xl p-2 sm:p-2.5 shadow-md flex-shrink-0 group-hover:scale-105 transition-transform">
          <GraduationCap class="w-5 h-5 sm:w-7 sm:h-7 text-white" />
        </div>
        <div class="min-w-0">
          <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 leading-tight truncate">
            {title}
          </h1>
          <p class="text-xs sm:text-sm text-gray-600 leading-snug truncate">
            {subtitle}
          </p>
        </div>
      </a>

    </div>
  </div>
</header>