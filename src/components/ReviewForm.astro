---
import { X } from '@lucide/astro';

interface Props {
  professorId: string;
  universityId?: string;
  courses?: Array<{ id: string; name: string; code?: string | null }>;
  professorName?: string;
}

const { professorId, universityId, courses = [], professorName = 'este profesor' } = Astro.props as Props;
---

<div id="review-modal" class="fixed inset-0 bg-black/50 backdrop-blur-sm hidden items-center justify-center p-4 z-50 overflow-y-auto">
  <div class="bg-white rounded-2xl max-w-2xl w-full my-8 shadow-2xl">
    {/* Header */}
    <div class="flex items-center justify-between p-6 border-b border-gray-200">
      <div>
        <h2 class="text-2xl font-bold text-gray-900">Calificar a {professorName}</h2>
        <p class="text-sm text-gray-500 mt-1">Tu review se publicará de forma anónima</p>
      </div>
      <button id="close-review-modal" class="p-2 hover:bg-gray-100 rounded-lg transition-colors" type="button">
        <X class="w-5 h-5 text-gray-500" />
      </button>
    </div>

    {/* Form */}
    <form action="/api/reviews" method="post" class="p-6 space-y-6">
      <input type="hidden" name="professor_id" value={professorId} />
      {universityId ? <input type="hidden" name="university_id" value={universityId} /> : null}

      {/* Course */}
      <div>
        <label class="block text-sm font-semibold text-slate-700 mb-1" for="course_id">Curso (opcional)</label>
        {courses.length > 0 ? (
          <select name="course_id" id="course_id" class="w-full p-2.5 border border-gray-200 rounded-lg">
            <option value="">Seleccionar (opcional)</option>
            {courses.map((c) => (
              <option value={c.id}>{c.code ? `${c.code} — ${c.name}` : c.name}</option>
            ))}
            <option value="__new__">Agregar curso</option>
          </select>
        ) : (
          <div class="flex items-center justify-between gap-4 rounded-lg border border-dashed border-gray-200 px-4 py-3">
            <p class="text-sm text-gray-600">Este profesor aún no tiene cursos registrados.</p>
            <button type="button" id="add-course-btn" class="px-3 py-2 bg-blue-600 text-white rounded-lg text-sm font-medium">
              Agregar curso
            </button>
          </div>
        )}
      </div>

      {/* New Course */}
      <div>
        <label class="inline-flex items-center gap-2 mt-1">
          <input type="checkbox" id="new-course-toggle" class="h-4 w-4" />
          <span class="text-sm text-slate-700">Registrar curso nuevo</span>
        </label>
        <div id="new-course-fields" class="mt-3 hidden space-y-3">
          <div>
            <label class="block text-sm font-semibold text-slate-700 mb-1" for="new_course_code">Código del curso</label>
            <input type="text" name="new_course_code" id="new_course_code" class="w-full p-2.5 border border-gray-200 rounded-lg" placeholder="Ej. MAT101" />
          </div>
          <div>
            <label class="block text-sm font-semibold text-slate-700 mb-1" for="new_course_name">Nombre del curso</label>
            <input type="text" name="new_course_name" id="new_course_name" class="w-full p-2.5 border border-gray-200 rounded-lg" placeholder="Ej. Cálculo I" />
          </div>
          <p class="text-xs text-slate-500">Si registras un curso nuevo, se usará en esta review.</p>
        </div>
      </div>

      {/* Ratings */}
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <label class="block text-sm font-semibold text-slate-700 mb-1" for="quality">Calidad</label>
          <select name="quality" id="quality" class="w-full p-2.5 border border-gray-200 rounded-lg" required>
            <option value="5">5 — Excelente</option>
            <option value="4">4 — Muy buena</option>
            <option value="3">3 — Buena</option>
            <option value="2">2 — Regular</option>
            <option value="1">1 — Mala</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-semibold text-slate-700 mb-1" for="difficulty">Dificultad</label>
          <select name="difficulty" id="difficulty" class="w-full p-2.5 border border-gray-200 rounded-lg" required>
            <option value="5">5 — Muy difícil</option>
            <option value="4">4 — Difícil</option>
            <option value="3">3 — Moderada</option>
            <option value="2">2 — Fácil</option>
            <option value="1">1 — Muy fácil</option>
          </select>
        </div>
      </div>

      {/* Comment */}
      <div>
        <label class="block text-sm font-semibold text-slate-700 mb-1" for="comment">Comentario (opcional)</label>
        <textarea name="comment" id="comment" rows="5" class="w-full p-2.5 border border-gray-200 rounded-lg" placeholder="Comparte tu experiencia (opcional)"></textarea>
      </div>

      <label class="inline-flex items-center gap-2 mt-1">
        <input type="checkbox" name="would_recommend" value="true" class="h-4 w-4" />
        <span class="text-sm text-slate-700">Lo recomendaría</span>
      </label>

      {/* Buttons */}
      <div class="flex gap-4 pt-2">
        <button type="button" id="cancel-review-modal" class="flex-1 py-3 px-4 border-2 border-gray-200 rounded-xl font-medium text-gray-700 hover:bg-gray-50 transition-colors">
          Cancelar
        </button>
        <button type="submit" class="flex-1 py-3 px-4 bg-blue-600 text-white rounded-xl font-medium hover:bg-blue-700 transition-colors">
          Enviar review
        </button>
      </div>
    </form>
  </div>
</div>

<script>
  const modal = document.getElementById('review-modal');
  const closeBtn = document.getElementById('close-review-modal');
  const cancelBtn = document.getElementById('cancel-review-modal');
  const courseSelect = document.getElementById('course_id') as HTMLSelectElement | null;
  const addCourseBtn = document.getElementById('add-course-btn');
  const toggle = document.getElementById('new-course-toggle') as HTMLInputElement | null;
  const fields = document.getElementById('new-course-fields');

  const hasAuthCookies = () =>
    document.cookie.includes('sb-access-token=') && document.cookie.includes('sb-refresh-token=');

  const openModal = () => {
    if (!hasAuthCookies()) {
      window.location.href = '/signin';
      return;
    }
    modal?.classList.remove('hidden');
    modal?.classList.add('flex');
  };

  const closeModal = () => {
    modal?.classList.add('hidden');
    modal?.classList.remove('flex');
  };

  document.querySelectorAll('[data-action="open-review"]').forEach((btn) => {
    btn.addEventListener('click', openModal);
  });

  closeBtn?.addEventListener('click', closeModal);
  cancelBtn?.addEventListener('click', closeModal);
  modal?.addEventListener('click', (e) => {
    if (e.target === modal) closeModal();
  });

  const showNewCourseFields = () => {
    if (!fields) return;
    fields.classList.remove('hidden');
    if (toggle) toggle.checked = true;
  };

  if (toggle && fields) {
    toggle.addEventListener('change', () => {
      fields.classList.toggle('hidden', !toggle.checked);
    });
  }

  addCourseBtn?.addEventListener('click', showNewCourseFields);

  courseSelect?.addEventListener('change', () => {
    if (courseSelect.value === '__new__') {
      courseSelect.value = '';
      showNewCourseFields();
    }
  });
</script>