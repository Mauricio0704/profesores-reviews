---
import { Star, ThumbsUp, ThumbsDown, CheckCircle, XCircle, Tag } from '@lucide/astro';

interface Review {
  id?: string | number;
  comment?: string | null;
  created_at?: string | null;
  difficulty?: number | null;
  quality?: number | null;
  would_recommend?: boolean | null;
  course_name?: string | null;
  semester?: string | null;
  tags?: string[] | null;
  student_name?: string | null;
  upvotes?: number | null;
  downvotes?: number | null;
  user_vote?: 'up' | 'down' | null;
}

interface Props {
  review: Review;
}

const { review } = Astro.props as Props;

const quality = Number.isFinite(review.quality) ? Number(review.quality) : 0;
const difficulty = Number.isFinite(review.difficulty) ? Number(review.difficulty) : 0;
const createdAt = review.created_at ? new Date(review.created_at) : null;
const courseLabel = review.course_name ? String(review.course_name).trim() : '';
const upvotes = Number.isFinite(review.upvotes) ? Number(review.upvotes) : 0;
const downvotes = Number.isFinite(review.downvotes) ? Number(review.downvotes) : 0;
const userVote = review.user_vote ?? null;
---

<div class="bg-white rounded-xl border border-gray-200 p-6 hover:shadow-md transition-shadow">
  {/* Header */}
  <div class="flex items-start justify-between mb-4">
    <div class="flex-1">
      <div class="flex items-center gap-3 mb-2">
        <div class="flex items-center gap-1">
          {Array.from({ length: 5 }).map((_, i) => (
            <Star
              class={`w-4 h-4 ${i < Math.round(quality) ? 'fill-yellow-400 text-yellow-400' : 'fill-gray-200 text-gray-200'}`}
            />
          ))}
        </div>
        <span class="text-sm text-gray-400">•</span>
        <span class="text-sm text-gray-500">
          {createdAt ? createdAt.toLocaleDateString('es-ES', { month: 'short', year: 'numeric' }) : '—'}
        </span>
      </div>
      <div class="space-y-1">
        {courseLabel ? (
          <p class="font-semibold text-gray-900">{courseLabel}</p>
        ) : (
          <p class="font-semibold text-gray-900">Curso no especificado</p>
        )}
        {review.semester ? (
          <p class="text-sm text-blue-600">{review.semester}</p>
        ) : null}
      </div>
    </div>

    {/* Would Take Again Badge */}
    {typeof review.would_recommend === 'boolean' ? (
      <div class="flex items-center gap-1.5 px-3 py-1.5 bg-gray-50 rounded-full">
        {review.would_recommend ? (
          <>
            <CheckCircle class="w-4 h-4 text-green-600" />
            <span class="text-sm font-medium text-green-700">Repetiría</span>
          </>
        ) : (
          <>
            <XCircle class="w-4 h-4 text-red-600" />
            <span class="text-sm font-medium text-red-700">No repetiría</span>
          </>
        )}
      </div>
    ) : null}
  </div>

  {/* Metrics */}
  <div class="flex items-center justify-between gap-6 mb-4 pb-4 border-b border-gray-100">
    <div class="flex items-center gap-6">
      <div>
        <p class="text-xs text-gray-500 mb-1">Calidad</p>
        <p class="text-lg font-bold text-blue-600">{quality.toFixed(1)}</p>
      </div>
      <div>
        <p class="text-xs text-gray-500 mb-1">Dificultad</p>
        <p class="text-lg font-bold text-orange-600">{difficulty.toFixed(1)}</p>
      </div>
    </div>
    <div class="flex items-center gap-2">
      <button
        class={`flex items-center gap-2 px-3 py-1.5 text-sm rounded-lg transition-colors border ${userVote === 'up' ? 'bg-blue-50 text-blue-600 border-blue-200' : 'text-gray-600 border-transparent hover:text-blue-600 hover:bg-blue-50'}`}
        type="button"
        data-action="vote"
        data-review-id={review.id}
        data-vote="up"
        aria-pressed={userVote === 'up'}
      >
        <ThumbsUp class="w-4 h-4" />
        <span>{upvotes}</span>
      </button>
      <button
        class={`flex items-center gap-2 px-3 py-1.5 text-sm rounded-lg transition-colors border ${userVote === 'down' ? 'bg-red-50 text-red-600 border-red-200' : 'text-gray-600 border-transparent hover:text-red-600 hover:bg-red-50'}`}
        type="button"
        data-action="vote"
        data-review-id={review.id}
        data-vote="down"
        aria-pressed={userVote === 'down'}
      >
        <ThumbsDown class="w-4 h-4" />
        <span>{downvotes}</span>
      </button>
    </div>
  </div>

  {/* Review Comment */}
  {review.comment ? (
    <p class="text-gray-700 leading-relaxed mb-4">{review.comment}</p>
  ) : (
    <p class="text-gray-500 italic mb-4">Sin comentario.</p>
  )}

  {/* Tags */}
  {review.tags && review.tags.length > 0 ? (
    <div class="mb-4">
      <div class="flex items-center gap-2 flex-wrap">
        {review.tags.map((tag) => (
          <span class="inline-flex items-center gap-1.5 px-3 py-1 bg-blue-50 text-blue-700 text-xs font-medium rounded-full">
            <Tag class="w-3 h-3" />
            {tag}
          </span>
        ))}
      </div>
    </div>
  ) : null}

</div>