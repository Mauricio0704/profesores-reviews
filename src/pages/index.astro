---
import Layout from '../layouts/Layout.astro';
import Courses from '../components/Courses.astro';
import Professors from '~/components/Professors.astro';
import Header from '../components/Header.astro';
import UniversityCard from '~/components/UniversityCard.astro';
import UniversitySearch from '~/components/UniversitySearch.astro';

// const response = await fetch(new URL('/api/universities', Astro.url));
const universities = [
    {
        name: "Universidad Autónoma de Nuevo León",
        slug: "uanl",
        avg_rating: 4.2,
        professor_count: 1200,
        review_count: 4500,
        department_count: 35,
    },
    {
        name: "Instituto Tecnológico y de Estudios Superiores de Monterrey",
        slug: "itesm",
        avg_rating: 4.5,
        professor_count: 900,
        review_count: 3200,
        department_count: 28,
    },
    {
        name: "Universidad de Monterrey",
        slug: "udem",
        avg_rating: 4.1,
        professor_count: 600,
        review_count: 2100,
        department_count: 22,
    },
];
---

<Layout>
	<body>
		<div class="min-h-screen w-full bg-gradient-to-br from-indigo-50 via-blue-50 to-slate-50">
			{/*Main Content*/}
			<main class="w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
				{/*Title*/}
				<div class="text-center mb-12">
					<h2 class="text-4xl font-bold text-gray-900 mb-3">
						Selecciona Tu Universidad
					</h2>
					<p class="text-lg text-gray-600">
						Escoge tu universidad para ver los profesores calificados.
					</p>
				</div>
				{/*Search Bar*/}
				<UniversitySearch />

				{/*College Cards Grid*/}
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl mx-auto">
				{universities.map((uni: any) => (
					<UniversityCard 
					name={uni.name}
					slug={uni.slug}
					location="Monterrey, NL" 
					avgRating={uni.avg_rating}         
					professorCount={uni.professor_count}    
					reviewCount={uni.review_count}       
					departmentCount={uni.department_count}     
					/>
				))}
				</div>
			</main>
		</div>
	</body>
</Layout>
