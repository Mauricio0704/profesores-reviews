---
import Layout from "../layouts/Layout.astro";

const { cookies, redirect, url } = Astro;

const accessToken = cookies.get("sb-access-token");
const refreshToken = cookies.get("sb-refresh-token");

const error = url.searchParams.get("error");
const returnToParam = url.searchParams.get("returnTo") ?? "/";
const returnTo = returnToParam.startsWith("/") && !returnToParam.startsWith("//")
  ? returnToParam
  : "/";

if (accessToken && refreshToken) {
  return redirect(returnTo);
}
---

<Layout title="Sign in">
  <div class="max-w-105 mx-auto my-12 p-8 bg-white/90 rounded-xl shadow-lg">
    <h1 class="text-2xl text-slate-900 mb-2">Inicia sesión</h1>
    <p class="text-sm text-slate-500 mb-5">¿No estás registrado? <a class="text-purple-600 hover:underline" href="/register">Crea una cuenta</a></p>

    {error === "invalid" && (
      <p class="text-sm text-red-600 mb-4">Email o contraseña inválidos. Intenta de nuevo.</p>
    )}
    {error === "oauth" && (
      <p class="text-sm text-red-600 mb-4">No se pudo iniciar sesión con Google. Intenta de nuevo.</p>
    )}

    <form class="flex flex-col gap-3" action="/api/auth/signin" method="post">
      <input type="hidden" name="returnTo" value={returnTo} />
      <label class="font-semibold text-slate-700 text-sm" for="email">Email</label>
      <input class="p-2.5 px-3 border border-gray-200 rounded-lg text-base focus:outline-none focus:ring-4 focus:ring-purple-100 focus:border-purple-600" type="email" name="email" id="email" required />

      <label class="font-semibold text-slate-700 text-sm" for="password">Contraseña</label>
      <input class="p-2.5 px-3 border border-gray-200 rounded-lg text-base focus:outline-none focus:ring-4 focus:ring-purple-100 focus:border-purple-600" type="password" name="password" id="password" required />

      <button class="mt-1 py-3 px-4 bg-purple-600 hover:bg-purple-700 text-white rounded-lg font-bold" type="submit">Iniciar sesión</button>
    </form>

    <div class="flex items-center gap-3 my-5 text-xs text-slate-400">
      <span class="flex-1 h-px bg-slate-200"></span>
      <span>o</span>
      <span class="flex-1 h-px bg-slate-200"></span>
    </div>

    <a
      class="w-full inline-flex items-center justify-center gap-2 py-3 px-4 bg-white border border-gray-200 hover:bg-gray-50 text-gray-800 rounded-lg font-semibold"
      href={`/api/auth/google?returnTo=${encodeURIComponent(returnTo)}`}
    >
      <svg class="w-5 h-5" viewBox="0 0 48 48" aria-hidden="true" focusable="false">
        <path fill="#EA4335" d="M24 9.5c3.2 0 6.1 1.1 8.4 3.3l6.2-6.2C34.7 2.8 29.7 0 24 0 14.6 0 6.5 5.3 2.6 13l7.5 5.8C12.1 13 17.6 9.5 24 9.5z"/>
        <path fill="#34A853" d="M46.1 24.6c0-1.6-.1-2.8-.4-4.2H24v8.1h12.6c-.6 3.3-2.5 6.1-5.4 8l8.3 6.4c4.8-4.4 7.6-10.8 7.6-18.3z"/>
        <path fill="#4A90E2" d="M10.1 28.8c-1.1-3.3-1.1-6.9 0-10.2L2.6 13C-.9 19.7-.9 28.3 2.6 35l7.5-6.2z"/>
        <path fill="#FBBC05" d="M24 48c5.7 0 10.7-1.9 14.3-5.1l-8.3-6.4c-2.3 1.5-5.2 2.4-8.2 2.4-6.4 0-11.9-3.5-13.9-8.6L2.6 35C6.5 42.7 14.6 48 24 48z"/>
      </svg>
      <span class="text-base">Continuar con Google</span>
    </a>
  </div>
</Layout>